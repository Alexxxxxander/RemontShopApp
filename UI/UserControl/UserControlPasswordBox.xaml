<UserControl x:Class="RemontApp.UI.UserControl.UserControlPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemontApp.UI.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Height="40" Width="200" Visibility="Hidden" Name="TxtBox" TextChanged="TxtBox_TextChanged" Style="{DynamicResource TextBoxStyleBase}"></TextBox>
        <PasswordBox Height="40" Width="200" Name="PswBox" PasswordChanged="PswBox_PasswordChanged" Style="{DynamicResource PasswordBoxStyleBase}"></PasswordBox>
        <CheckBox Content="Показать пароль" Margin="350 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"></CheckBox>
    </Grid>
</UserControl>
